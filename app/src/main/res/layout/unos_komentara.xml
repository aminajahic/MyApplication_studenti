<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Komentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="137dp"
        android:id="@+id/ttt" />

    <EditText
        android:text="Komentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ttt"
        android:layout_toRightOf="@+id/ttt"
        android:layout_toEndOf="@+id/ttt"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:id="@+id/unosKomentara" />

    <EditText
        android:text="Ocjena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/unosKomentara"
        android:layout_alignEnd="@+id/unosKomentara"
        android:id="@+id/unosOcjene" />

    <TextView
        android:text="Ocjena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/ttt"
        android:layout_alignLeft="@+id/ttt"
        android:layout_alignStart="@+id/ttt" />
</RelativeLayout>